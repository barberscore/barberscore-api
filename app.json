{
  "name": "Barberscore API",
  "description": "Scoring API for the Barbershop Harmony Society",
  "logo": "https://barberscore-api.herokuapp.com/static/api/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-api",
  "stack": "heroku-16",
  "success_url": "/admin/",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": "1",
      "size": "hobby"
    }
  },
  "addons": [
    "algoliasearch:free",
    "cloudinary:starter",
    "docraptor:starter",
    "geocody:test",
    "heroku-exec:test",
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev",
    "papertrail:choklad",
    "rollbar:free",
    "scheduler:standard",
    "sendgrid:starter"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "settings.prod",
    "PYTHONPATH": "project",
    "SECRET_KEY": {
      "generator": "secret",
      "required": true
    },
    "AUTH0_API_ID": {
      "required": true
    },
    "AUTH0_API_SECRET": {
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "required": true
    },
    "AUTH0_DOMAIN": {
      "required": true
    },
    "AUTH0_PUBLIC_KEY": {
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "django-admin seed_database"
  },
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:hobby-dev"
      ],
      "env": {
        "DJANGO_SETTINGS_MODULE": "settings.test",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        }
      },
      "scripts": {
        "test": "pytest --no-migrations --reuse-db --tap-stream"
      }
    }
  }
}
