{
  "name": "Barberscore API",
  "description": "Scoring API for the Barbershop Harmony Society",
  "logo": "https://s3-us-west-1.amazonaws.com/barberscore/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-api",
  "stack": "heroku-16",
  "success_url": "/admin/",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": "1",
      "size": "standard-2X"
    },
    "worker": {
      "quantity": "1",
      "size": "standard-1X"
    }
  },
  "addons": [
    "cloudinary:starter",
    "deployhooks:http",
    "papertrail:choklad",
    "sendgrid:starter",
    "heroku-redis:hobby-dev",
    "heroku-postgresql:standard-0"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "description": "Configures which settings to use. (staging|dev)",
      "value": "settings.staging",
      "required": true
    },
    "PYTHONPATH": {
      "description": "Configures the PYTHONPATH.  Do not edit.",
      "value": "project",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Required by Django.  Auto-generated.",
      "generator": "secret",
      "required": true
    },
    "AUTH0_API_ID": {
      "description": "Auth0 API id.",
      "required": true
    },
    "AUTH0_API_SECRET": {
      "description": "Auth0 API secret.",
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "description": "Auth0 API endpoint.",
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "description": "Auth0 Client id.",
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "description": "Auth0 Client secret.",
      "required": true
    },
    "AUTH0_DOMAIN": {
      "description": "Auth0 Client endpoint.",
      "required": true
    },
    "HEROKU_APP_NAME": {
      "description": "Will be populated by Heroku in Review App.",
      "required": false
    },
    "HEROKU_PARENT_APP_NAME": {
      "description": "Will be populated by Heroku in Review App.",
      "required": false
    }
  },
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:hobby-dev"
        "heroku-redis:hobby-dev"
      ],
      "env": {
        "DJANGO_SETTINGS_MODULE": "settings.test",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        }
      },
      "scripts": {
        "test": "pytest --no-migrations --reuse-db"
      }
    }
  }
}
