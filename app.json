{
  "name": "Barberscore API",
  "description": "Scoring API for the Barbershop Harmony Society",
  "logo": "https://s3-us-west-1.amazonaws.com/barberscore/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-api",
  "stack": "heroku-16",
  "success_url": "/admin/",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": "1",
      "size": "hobby"
    },
    "worker": {
      "quantity": "1",
      "size": "hobby"
    }
  },
  "addons": [
    "cloudinary:starter",
    "heroku-redis:hobby-dev",
    "heroku-postgresql:hobby-dev"
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "description": "Configures which settings to use. [staging|dev]",
      "value": "settings.dev",
      "required": true
    },
    "PYTHONPATH": {
      "description": "Configures the PYTHONPATH.  Do not edit.",
      "value": "project",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Required by Django.  Auto-generated.",
      "generator": "secret",
      "required": true
    },
    "BHS_DATABASE_URL": {
      "description": "Credentials used to access the BHS Database.",
      "required": true
    },
    "AUTH0_API_ID": {
      "description": "Auth0 API id.",
      "required": true
    },
    "AUTH0_API_SECRET": {
      "description": "Auth0 API secret.",
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "description": "Auth0 API endpoint.",
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "description": "Auth0 Client id.",
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "description": "Auth0 Client secret.",
      "required": true
    },
    "AUTH0_DOMAIN": {
      "description": "Auth0 Client endpoint.",
      "required": true
    },
    "ALGOLIASEARCH_API_KEY": {
      "description": "Algolia Private API Key.",
      "required": true
    },
    "ALGOLIASEARCH_API_KEY_SEARCH": {
      "description": "Algolia Public Search Key.",
      "required": true
    },
    "ALGOLIASEARCH_APPLICATION_ID": {
      "description": "Algolia App ID.",
      "required": true
    },
    "SENTRY_DSN": {
      "description": "Sentry DSN URL.",
      "required": true
    }
  },
  "environments": {
    "test": {
      "addons": [
        "cloudinary:starter",
        "heroku-postgresql:in-dyno",
        "heroku-redis:in-dyno"
      ],
      "env": {
        "DJANGO_SETTINGS_MODULE": "settings.test",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        }
      },
      "scripts": {
        "test": "pytest"
      }
    }
  }
}
