{
  "name": "Barberscore API",
  "description": "Scoring and Contest API for the Barbershop Harmony Society",
  "logo": "https://s3-us-west-1.amazonaws.com/barberscore/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-api",
  "stack": "heroku-16",
  "success_url": "/admin/",
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-python.git#v123"
    }
  ],
  "formation": {
    "web": {
      "quantity": "1",
      "size": "hobby"
    },
    "worker": {
      "quantity": "1",
      "size": "hobby"
    }
  },
  "addons": [
    "heroku-redis:hobby-dev",
    "heroku-postgresql:hobby-dev"
  ],
  "env": {
    "AUTH0_API_ID": {
      "description": "Auth0 API id.",
      "required": true
    },
    "AUTH0_API_SECRET": {
      "description": "Auth0 API secret.",
      "required": true
    },
    "AUTH0_API_DOMAIN": {
      "description": "Auth0 API endpoint.",
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "description": "Auth0 Client id.",
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "description": "Auth0 Client secret.",
      "required": true
    },
    "AUTH0_CLIENT_DOMAIN": {
      "description": "Auth0 Client endpoint.",
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "description": "Configures the settings.  Do not edit.",
      "value": "settings.dev",
      "required": true
    },
    "EMAIL_BACKEND": {
      "description": "Email backend.",
      "value": "django.core.mail.backends.dummy.EmailBackend",
      "required": true
    },
    "PYTHONPATH": {
      "description": "Pythonpath.  Do not edit.",
      "value": "project",
      "required": true
    },
    "REDIS_MAX_CONNECTIONS": {
      "description": "Maximum Redis connections.",
      "value": "40",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Required by Django.  Auto-generated.",
      "generator": "secret",
      "required": true
    }
  },
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno",
        "heroku-redis:in-dyno"
      ],
      "env": {
        "DJANGO_SETTINGS_MODULE": "settings.base",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        },
        "REDIS_MAX_CONNECTIONS": "40"
      },
      "scripts": {
        "test": "pytest"
      }
    }
  }
}
