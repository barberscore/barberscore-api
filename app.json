{
  "name": "Barberscore Django",
  "description": "Scoring software for the Barbershop Harmony Society",
  "addons": [
    "algoliasearch:free",
    "auth0:free",
    "cloudinary:starter",
    "docraptor:starter",
    "geocody:test",
    "heroku-exec:test",
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev",
    "papertrail:choklad",
    "pointdns:developer"
    "rollbar:free",
    "scheduler:standard",
    "sendgrid:starter",
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "settings.prod",
    "PYTHONPATH": "project",
    "SECRET_KEY": {
      "generator": "secret"
    },
  },
  "environments": {
    "test": {
      "env": {
        "DJANGO_SETTINGS_MODULE": "settings.prod",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        },
      },
      "scripts": {
        "test": "pytest"
      }
    }
  },
  "formation": {
    "web": {
      "quantity": "1",
      "size": "free"
    }
  },
  "logo": "https://barberscore-django.herokuapp.com/static/app/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-django",
  "stack": "cedar-14",
  "scripts": {
    "postdeploy": "django-admin migrate --noinput"
  },
  "success_url": "/admin"
}
