{
  "name": "Barberscore API",
  "description": "Scoring API for the Barbershop Harmony Society",
  "logo": "https://s3-us-west-1.amazonaws.com/barberscore/bhs_logo.png",
  "repository": "https://github.com/barberscore/barberscore-api",
  "stack": "heroku-16",
  "success_url": "/admin/",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": "1",
      "size": "hobby"
    },
    "worker": {
      "quantity": "1",
      "size": "hobby"
    }
  },
  "addons": [
    "cloudinary:starter",
    "heroku-redis:hobby-dev",
    "heroku-postgresql:hobby-dev"
  ],
  "env": {
    "ENVIRONMENT": {
      "description": "Sets the environment.",
      "value": "dev",
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "description": "Configures the settings.  Do not edit.",
      "value": "sets",
      "required": true
    },
    "PYTHONPATH": {
      "description": "Configures the import path.  Do not edit.",
      "value": "project",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Required by Django.  Auto-generated.",
      "generator": "secret",
      "required": true
    },
    "DEBUG": {
      "description": "Django Debug setting.",
      "value": false,
      "required": true
    },
    "EMAIL_BACKEND": {
      "description": "Email backend.",
      "value": "django.core.mail.backends.dummy.EmailBackend",
      "required": true
    },
    "EMAIL_PORT": {
      "description": "SMTP Email port.  Use 1025 for MailHog.",
      "value": 25,
      "required": true
    },
    "ALGOLIASEARCH_API_KEY": {
      "description": "Algolia Private API Key.",
      "required": true
    },
    "ALGOLIASEARCH_APPLICATION_ID": {
      "description": "Algolia App ID.",
      "required": true
    },
    "ALGOLIASEARCH_AUTO_INDEXING": {
      "description": "Algolia indexing setting.",
      "value": false,
      "required": true
    },
    "ALGOLIASEARCH_INDEX_SUFFIX": {
      "description": "Algolia index suffix.",
      "value": "dev",
      "required": true
    },
    "AUTH0_API_ID": {
      "description": "Auth0 API id.",
      "required": true
    },
    "AUTH0_API_SECRET": {
      "description": "Auth0 API secret.",
      "required": true
    },
    "AUTH0_AUDIENCE": {
      "description": "Auth0 API endpoint.",
      "required": true
    },
    "AUTH0_CERTIFICATE": {
      "description": "Auth0 RS256 Public Key Certificate.",
      "required": true
    },
    "AUTH0_CLIENT_ID": {
      "description": "Auth0 Client id.",
      "required": true
    },
    "AUTH0_CLIENT_SECRET": {
      "description": "Auth0 Client secret.",
      "required": true
    },
    "AUTH0_DOMAIN": {
      "description": "Auth0 Client endpoint.",
      "required": true
    },
    "BHS_DATABASE_URL": {
      "description": "Credentials used to access the BHS Database.",
      "required": true
    },
    "REDIS_MAX_CONNECTIONS": {
      "description": "Maximum Redis connections.",
      "value": 40,
      "required": true
    },
    "RQ_ASYNC": {
      "description": "Default RQ async.",
      "value": false,
      "required": true
    },
    "SENTRY_DSN": {
      "description": "Sentry DSN URL.",
      "required": true
    }
  },
  "environments": {
    "test": {
      "addons": [
        "heroku-postgresql:in-dyno",
        "heroku-redis:in-dyno"
      ],
      "env": {
        "ENVIRONMENT": "dev",
        "DJANGO_SETTINGS_MODULE": "settings_ci",
        "PYTHONPATH": "project",
        "SECRET_KEY": {
          "generator": "secret"
        },
        "DEBUG": false,
        "EMAIL_PORT": "25",
        "EMAIL_BACKEND": "django.core.mail.backends.dummy.EmailBackend",
        "REDIS_MAX_CONNECTIONS": "40",
        "RQ_ASYNC": false
      },
      "scripts": {
        "test": "pytest"
      }
    }
  }
}
